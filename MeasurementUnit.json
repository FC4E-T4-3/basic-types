{
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "net.cnri.repository": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "name": {
      "type": "string",
      "maxLength": 128,
      "title": "Type Name",
      "pattern": "^([!-~])+$",
      "description": "please use printable ascii characters without blank",
      "net.cnri.repository": {
        "preview": {
          "showInPreview": true,
          "isPrimary": true
        }
      }
    },
    "provenance": {
      "type": "object",
      "title": "Provenance",
      "properties": {
        "createdBy": {
          "type": "string",
          "title": "Created By",
          "cordra": {
            "type": {
              "autoGeneratedField": "createdBy"
            }
          }
        },
        "modifiedBy": {
          "type": "string",
          "title": "Modified By",
          "cordra": {
            "type": {
              "autoGeneratedField": "modifiedBy"
            }
          }
        },
        "creationDate": {
          "title": "Creation Date",
          "type": "string",
          "format": "datetime",
          "net.cnri.repository": {
            "type": {
              "autoGeneratedField": "creationDate"
            }
          }
        },
        "lastModificationDate": {
          "title": "Last Modification Date",
          "type": "string",
          "format": "datetime",
          "net.cnri.repository": {
            "type": {
              "autoGeneratedField": "modificationDate"
            }
          }
        }
      }
    },
    "unitDescription": {
      "type": "object",
      "title": "Unit",
      "properties": {
        "Name": {
          "type": "string",
          "title": "Name",
          "description": "Name of the Unit"
        },
        "Symbol": {
          "type": "string",
          "title": "Unit Symbol",
          "description": "Symbol to describe the unit. A prefix symbol attached to a unit symbol (e.g. 'km', 'cm') constitutes a new inseparable unit symbol."
        },
        "Quantity": {
          "type": "string",
          "title": "Quantity",
          "description": "The physical quanitity measured using the unit."
        },
        "Dimension Symbol": {
          "type": "string",
          "title": "Dimension Symbol",
          "description": "The dimensional symbol used for the physical quantity."
        },
        "TypicalSymbols": {
          "type": "array",
          "title": "Typical Symbols",
          "description": "Other typical symbols to describe the measured quantity.",
          "items": {
            "title": "Typical Symbol",
            "type": "string"
          }
        },
        "Context": {
          "type": "string",
          "title": "Context",
          "description": "Context where this unit is measured or used."
        },
        "Definition": {
          "type": "string",
          "format": "textarea",
          "title": "Definition",
          "description": "A short definition of the unit."
        },
        "Usage": {
          "type": "string",
          "format": "textarea",
          "title": "Usage",
          "description": "How the unit is used in research."
        }
      }
    }
  }
}
