{
  "type": "object",
  "format": "table",
  "required": [
    "name"
  ],
  "properties": {
    "identifier": {
      "type": "string",
      "net.cnri.repository": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "name": {
      "type": "string",
      "maxLength": 256,
      "title": "Type Name",
      "net.cnri.repository": {
        "preview": {
          "showInPreview": true,
          "isPrimary": true
        }
      }
    },
    "description": {
      "type": "string",
      "maxLength": 8192,
      "title": "Description",
      "pattern": "(.|\n)*",
      "net.cnri.repository": {
        "preview": {
          "showInPreview": true,
          "isPrimary": true
        }
      }
    },
    "provenance": {
      "type": "object",
      "title": "Provenance",
      "properties": {
        "createdBy": {
          "type": "string",
          "title": "Created By",
          "cordra": {
            "type": {
              "autoGeneratedField": "createdBy"
            }
          }
        },
        "modifiedBy": {
          "type": "string",
          "title": "Modified By",
          "cordra": {
            "type": {
              "autoGeneratedField": "modifiedBy"
            }
          }
        },
        "creationDate": {
          "title": "Creation Date",
          "type": "string",
          "format": "datetime",
          "net.cnri.repository": {
            "type": {
              "autoGeneratedField": "creationDate"
            }
          }
        },
        "lastModificationDate": {
          "title": "Last Modification Date",
          "type": "string",
          "format": "datetime",
          "net.cnri.repository": {
            "type": {
              "autoGeneratedField": "modificationDate"
            }
          }
        }
      }
    },
    "Aliases": {
      "description": "Provide a list of aliases as alternatives to the chosen name.",
      "title": "Aliases",
      "type": "array",
      "items": {
        "title": "Alias",
        "type": "string"
      }
    },
    "reference": {
      "type": "string",
      "title": "Reference",
      "description": "External reference to the taxonomy node."
    },
    "parents": {
      "title": "Parent Nodes",
      "type": "array",
      "items": {
        "title": "Parent Node",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "TaxonomyNode"
              ]
            }
          }
        }
      }
    }
  }
}
