{
  "type": "object",
  "format": "table",
  "properties": {
    "identifier": {
      "type": "string",
      "net.cnri.repository": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "name": {
      "type": "string",
      "maxLength": 128,
      "title": "Type Name",
      "pattern": "^([!-~])+$",
      "description": "please use printable ascii characters without blank",
      "net.cnri.repository": {
        "preview": {
          "showInPreview": true,
          "isPrimary": true
        }
      }
    },
    "description": {
      "type": "string",
      "maxLength": 2048,
      "title": "Description",
      "pattern": "(.|\n)*",
      "net.cnri.repository": {
        "preview": {
          "showInPreview": true,
          "isPrimary": true
        }
      }
    },
    "provenance": {
      "type": "object",
      "title": "Provenance",
      "properties": {
        "contributors": {
          "type": "array",
          "format": "table",
          "title": "Contributors of this Record",
          "items": {
            "title": "Contributor",
            "type": "object",
            "required": [
              "identifiedUsing",
              "name"
            ],
            "properties": {
              "identifiedUsing": {
                "title": "Identified Using",
                "type": "string",
                "net.cnri.repository": {
                  "type": {
                    "suggestedVocabulary": [
                      "Handle",
                      "ORCID",
                      "URL",
                      "Text"
                    ]
                  }
                }
              },
              "name": {
                "title": "Name",
                "type": "string",
                "maxLength": 2048
              },
              "details": {
                "title": "Details",
                "type": "string",
                "format": "textarea",
                "maxLength": 1024
              }
            }
          }
        },
        "creationDate": {
          "title": "Creation Date",
          "type": "string",
          "format": "datetime",
          "net.cnri.repository": {
            "type": {
              "autoGeneratedField": "creationDate"
            }
          }
        },
        "lastModificationDate": {
          "title": "Last Modification Date",
          "type": "string",
          "format": "datetime",
          "net.cnri.repository": {
            "type": {
              "autoGeneratedField": "modificationDate"
            }
          }
        },
        "digitalObjectPolicy": {
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "digitalObjectPolicy"
                ]
              }
            }
          }
        },
        "W3C PROV": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "format": "table",
          "items": {
            "type": "object",
            "properties": {
              "wasDerivedFrom": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "specializationOf": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "wasRevisionOf": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "hadPrimarySource": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "wasQuotedFrom": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "alternateOf": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "Tags": {
      "title": "Tags",
      "type": "array",
      "items": {
        "title": "Tag",
        "type": "string"
      }
    },
    "Components": {
      "type": "object",
      "title": "Components",
      "required": [
        "Relations",
        "additionalProps"
      ],
      "properties": {
        "Relations": {
          "type": "string",
          "title": "Relations between components",
          "enum": [
            "AND",
            "OR",
            "XOR"
          ]
        },
        "additionalProps": {
          "title": "AdditionalProperties",
          "type": "boolean"
        },
        "Properties": {
          "title": "Components",
          "type": "array",
          "items": {
            "type": "object",
            "title": "Component",
            "required": [
              "Name",
              "Type"
            ],
            "properties": {
              "Name": {
                "title": "Name",
                "type": "string"
              },
              "Type": {
                "title": "Type",
                "type": "string",
                "cordra": {
                  "type": {
                    "handleReference": {
                      "types": [
                        "TBasicInfoTypeLong",
                        "TBasicInfoTypeShort",
                        "TBasicInfoType"
                      ]
                    }
                  }
                }
              },
              "Properties": {
                "type": "array",
                "minItems": 1,
                "maxItems": 1,
                "format": "table",
                "items": {
                  "type": "object",
                  "required": [
                    "Cardinality"
                  ],
                  "properties": {
                    "Value": {
                      "format": "table",
                      "type": "string"
                    },
                    "Cardinality": {
                      "type": "string",
                      "enum": [
                        "0 - 1",
                        "1",
                        "0 - n",
                        "1 - n"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}